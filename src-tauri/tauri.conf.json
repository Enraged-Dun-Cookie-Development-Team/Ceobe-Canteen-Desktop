{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:8080",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "小刻食堂",
    "version": "1.0.4"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png"
    },
    "allowlist": {
      "all": false,
      "notification": {
        "all": true
      },
      "fs": {
        "readFile": true
      },
      "shell": {
        "open": true
      },
      "clipboard": {
        "all": true
      },
      "window": {
        "all": true
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "all": true,
        "assetScope": []
      },
      "dialog": {
        "message": true
      },
      "os":{
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "SocialNetworking",
      "copyright": "CeobeCanteen",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.ceobe-canteen.desktop",
      "longDescription": "自由的兔兔把烙好的饼到处藏，就由小刻把它们都找出来吧！",
      "macOS": {
        "license": "assets/user-license.license",
        "entitlements": null,
        "frameworks": [],
        "providerShortName": null
      },
      "shortDescription": "帮小刻找好多好吃的饼",
      "targets": [
        "deb",
        "dmg",
        "app",
        "appimage",
        "nsis"
      ],
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper",
          "silent": false
        },
        "digestAlgorithm": "sha256",
        "nsis": {
          "license": "assets/user-license.license",
          "headerImage": "assets/installer-header.bmp",
          "sidebarImage": "assets/installer-side.bmp",
          "installerIcon": "assets/installer-icon.ico",
          "installMode": "both",
          "languages": [
            "SimpChinese"
          ]
        }
      }
    },
    "security": {
      "csp": "default-src * data: blob: filesystem: about: ws: wss: 'unsafe-inline' 'unsafe-eval'; script-src * data: blob: 'unsafe-inline' 'unsafe-eval'; connect-src * data: blob: 'unsafe-inline'; img-src * data: blob: 'unsafe-inline'; frame-src * data: blob: ; style-src * data: blob: 'unsafe-inline'; font-src * data: blob: 'unsafe-inline'; frame-ancestors * data: blob:;"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "visible": false,
        "label": "main",
        "height": 720,
        "resizable": true,
        "title": "小刻食堂",
        "width": 1280,
        "minWidth": 1280,
        "minHeight": 640
      },
      {
        "label": "background",
        "visible": false,
        "title": "background",
        "url": "/#/background"
      },
      {
        "label": "notification",
        "title": "notification",
        "width": 400,
        "height": 355,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "url": "/#/notification"
      }
    ],
    "cli": {
      "args": [{
        "name": "hidden",
        "short": "c",
        "description": "是否启动时保持后台运行",
        "longDescription": "当给定该配置项时，将在启动时在后台静默运行"
      }
      ]
    }
  }
}
