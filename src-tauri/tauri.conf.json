{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080"
  },
  "bundle": {
    "active": true,
    "category": "SocialNetworking",
    "copyright": "CeobeCanteen",
    "targets": [
      "deb",
      "dmg",
      "app",
      "appimage",
      "nsis"
    ],
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper",
        "silent": false
      },
      "digestAlgorithm": "sha256",
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "headerImage": "assets/installer-header.bmp",
        "sidebarImage": "assets/installer-side.bmp",
        "installerIcon": "assets/installer-icon.ico",
        "installMode": "both"
      }
    },
    "longDescription": "自由的兔兔把烙好的饼到处藏，就由小刻把它们都找出来吧！",
    "macOS": {
      "providerShortName": null,
      "entitlements": null,
      "frameworks": []
    },
    "shortDescription": "帮小刻找好多好吃的饼",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "licenseFile": "assets/user-license.license"
  },
  "productName": "小刻食堂",
  "mainBinaryName": "小刻食堂",
  "version": "1.0.4",
  "identifier": "com.ceobe-canteen.desktop",
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "hidden",
          "short": "c",
          "description": "是否启动时保持后台运行",
          "longDescription": "当给定该配置项时，将在启动时在后台静默运行"
        }
      ]
    }
  },
  "app": {
    "trayIcon": {
      "iconPath": "icons/32x32.png"
    },
    "withGlobalTauri": true,
    "windows": [
      {
        "decorations": false,
        "fullscreen": false,
        "visible": false,
        "label": "main",
        "height": 640,
        "resizable": true,
        "title": "小刻食堂",
        "width": 1280,
        "minWidth": 1280,
        "minHeight": 640
      },
      {
        "label": "background",
        "visible": false,
        "title": "background",
        "url": "/#/background"
      },
      {
        "label": "notification",
        "title": "notification",
        "width": 400,
        "height": 355,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": false,
        "decorations": false,
        "url": "/#/notification"
      }
    ],
    "security": {
      "csp": "default-src * data: blob: filesystem: about: ws: wss: 'unsafe-inline' 'unsafe-eval'; script-src * data: blob: 'unsafe-inline' 'unsafe-eval'; connect-src ipc: http://ipc.localhost * data: blob: 'unsafe-inline'; img-src * data: blob: 'unsafe-inline'; frame-src * data: blob: ; style-src * data: blob: 'unsafe-inline'; font-src * data: blob: 'unsafe-inline'; frame-ancestors * data: blob:;"
    }
  }
}